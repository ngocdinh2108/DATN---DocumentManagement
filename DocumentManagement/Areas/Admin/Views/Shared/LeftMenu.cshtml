@using DocumentManagement.Common;

@{
    var userLogin = (UserLogin)ViewBag.SessionViewBag;
}

<div class="col-md-3 left_col">
    <div class="left_col scroll-view">
        <div class="navbar nav_title" style="border: 0;">
            <a href="/Admin/Home" class="site_title"><i class="fa fa-home"></i> <span style="font-size:20px">Quản Lý Văn Bản</span></a>
        </div>

        <div class="clearfix"></div>

        <!-- menu profile quick info -->
        <div class="profile clearfix">
            <div class="profile_pic">
                <img width="60px" height="60px" src="@userLogin.Avatar" alt="~/Assets/Admin." class="img-circle profile_img">
            </div>
            <div class="profile_info">
                <span>Xin chào,</span>
                <h2>@userLogin.Name</h2>
            </div>
        </div>
        <!-- /menu profile quick info -->

        <br />

        <!-- sidebar menu -->
        <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
            <div class="menu_section">
                <ul class="nav side-menu">
                    <li>
                        <a><i class="fa fa-bar-chart-o"></i> Thống kê <span class="fa fa-chevron-down"></span> </a>
                        <ul class="nav child_menu">
                            <li><a href="/Admin/Home/Index"><i class="fa fa-users"></i>Thống kê theo loại văn bản</a></li>
                            <li><a href="#"><i class="fa fa-users"></i>Thống kê theo ngày ban hành</a></li>
                        </ul>
                    </li>

                    <li>
                        <a><i class="fa fa-desktop"></i> Quản lý hệ thống <span class="fa fa-chevron-down"></span></a>
                        <ul class="nav child_menu">
                            <li><a href="/Admin/User"><i class="fa fa-users"></i>Quản lý tài khoản</a></li>
                            <li><a href="/Admin/Department"><i class="fa fa-building"></i>Quản lý phòng ban, đơn vị</a></li>
                            <li><a href="/Admin/DocumentType"><i class="fa fa-folder"></i>Quản lý loại văn bản</a></li>
                        </ul>
                    </li>

                    <li>
                        <a><i class="fa fa-paste"></i> Quản lý văn bản đến <span class="fa fa-chevron-down"></span></a>
                        <ul class="nav child_menu">
                            <li><a href="/Admin/Document/CreateDispatchArrived">Thêm mới văn bản đến</a></li>
                            <li><a href="/Admin/Document/IndexDispatchArrivedPending">Văn bản chờ lấy ý kiến chỉ đạo của BGH</a></li>
                            <li><a href="/Admin/Document/IndexDispatchArrivedWaitingIssued">Văn bản chờ văn thư ban hành</a></li>
                            <li><a href="/Admin/Document/IndexDispatchArrivedIssued">Văn bản đã ban hành</a></li>
                        </ul>
                    </li>

                    <li>
                        <a><i class="fa fa-paste"></i> Quản lý văn bản đi <span class="fa fa-chevron-down"></span></a>
                        <ul class="nav child_menu">
                            <li><a href="/Admin/Document/CreateDispatchGo">Thêm mới văn bản đi</a></li>
                            <li><a href="/Admin/Document/IndexDispatchGoPending">Văn bản trình ký</a></li>
                            <li><a href="/Admin/Document/IndexDispatchGoIssued">Văn bản đã ban hành</a></li>
                            <li><a href="/Admin/Document/IndexDispatchGoCanceled">Văn bản bị hủy</a></li>
                        </ul>
                    </li>

                    <li>
                        <a><i class="fa fa-user"></i> Quản lý cá nhân <span class="fa fa-chevron-down"></span></a>
                        <ul class="nav child_menu">
                            <li><a href="/Admin/User/EditPersonalInfo/@userLogin.UserID">Chỉnh sửa thông tin cá nhân</a></li>
                            <li><a href="/Admin/User/ChangePassword">Đổi mật khẩu</a></li>
                        </ul>
                    </li>

                </ul>
            </div>

        </div>
        <!-- /sidebar menu -->
        <!-- /menu footer buttons -->
        <div class="sidebar-footer hidden-small">
            <a style="width:100%" data-toggle="tooltip" data-placement="top" title="Logout" href="/Admin/Login/Logout">
                <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
            </a>
        </div>
        <!-- /menu footer buttons -->
    </div>
</div>
